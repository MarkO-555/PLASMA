def a2textmode(columns)
    call($FB39, 0, 0, 0, 0) // textmode()
    if columns > 40 and MACHID & MACHID_80COL
        cswsave = *CSW
        kswsave = *KSW
        call($C300, 0, 0, 0,  0)
        conio:home       = @a2home80
        conio:gotoxy     = @a2gotoxy80
        conio:texttype   = @a2texttype80
        textcols         = 80
    else
        if textcols == 80
            if MACHID & $C0 == MACHID_IIE
                puts($15)
            else
                ^$C059
                *CSW = cswsave
                *KSW = kswsave
            fin
        fin
        conio:home       = @a2home
        conio:gotoxy     = @a2gotoxy
        conio:texttype   = @a2texttype
        textcols         = 40
        a2home
    fin
    return textcols
end
def a2grmode(mix)
    a2textmode(40)
    call($FB2F, 0, 0, 0, 0) // initmode()
    call($FB40, 0, 0, 0, 0) // grmode()
    if !mix
        ^showfull
    fin
    a2home
    return a2grscrn(@txt1scrn) // point to lo-res screen
end
def a2tone(duration, delay)
    byte i

    while duration
        ^speaker // toggle speaker
        for i = delay downto 0; next
        duration--
    loop
    return 0
end
def a2rnd
    *a2rndnum = (*a2rndnum << 1) + *a2rndnum + 123
    return *a2rndnum & $7FFF
end
//
